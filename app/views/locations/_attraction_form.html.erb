<div id="new-attraction-btn">
  <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal">
    Add New Attraction (+)
  </button>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="attractionForm" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="attractionForm">Share an attraction!</h4>
      </div>

      <div class="modal-body">
        <!-- CONTAINER -->
          <div class="container-fluid">
          <!-- CONTACT FORM -->
          <div class="col-sm-7 col-md-9">
            <%= form_for([@location, @attraction], html: {id: "attraction-form"}, :remote => true) do |f| %>
              <%= f.text_field :name, placeholder: "Attraction Name" %>
              <%= f.text_field :attraction_type, placeholder: "Type" %>
              <%= f.text_area :description, placeholder: "Description" %>
              <%= f.submit "Save", :class => "btn btn-primary", :"data-dismiss" => "modal"%>
            <% end %>

              <!-- form left col -->
              <div class="col-md-6">
                <div class="form-group">

                </div>
                <div class="form-group">

                </div>
              </div><!-- end: form left col -->
              <!-- form right col -->
              <div class="col-md-6">
                <div class="form-group">

                </div>
              </div><!-- end: form right col -->
              <div class="form-group">

              </div>

          </div><!-- end: CONTACT FORM -->
        </div><!-- end: CONTAINER -->
      </div><!-- end: modal body -->
    </div>
  </div>
</div>