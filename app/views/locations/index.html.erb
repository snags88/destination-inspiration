<body style="background-color: #333333; color: white;">
<h1 align="center" style="font-size: 75pt; margin-top: 30px;">Destination Inspiration</h1>

<table align="center">
  <tr align="center">
    <td style="border-bottom: solid thin white;" width="300px;">&nbsp</td>
    <td style="font-size: 55px; font-style: italic; padding-bottom:15px;" rowspan="2" width="200px;"> just go </td>
    <td style="border-bottom: solid thin white;" width="300px;">&nbsp</td>
  </tr>;
  <tr align="center" style="border:none;">
    <td> &nbsp </td>
    <td> &nbsp </td>
  </tr>
</table>

<input id="go" type="button"></input>

<div id="img-mosaic" class="row">
   <% @locations.each do |location| %>
     <div class="col-lg-4 col-sm-6 col-xs-12 gallery-container">
       <div class="border-container">
         <div class="img-container">
           <a href="<%= location_path(location) %>" target="_blank">
             <img src="<%= location.hero_image_url %>" class="img-responsive resized">
           </a>
         </div>
       </div>
     </div>
   <% end %>
</div>

</body>


